                <Separator HorizontalAlignment="Left" Height="48" Margin="120,195,0,0" VerticalAlignment="Top" Width="49"/>
                <Separator HorizontalAlignment="Left" Height="48" Margin="307,63,0,0" VerticalAlignment="Top" Width="33"/>
                <Separator HorizontalAlignment="Left" Height="48" Margin="307,179,0,0" VerticalAlignment="Top" Width="31" RenderTransformOrigin="0.594,-1.208"/>
                <Separator HorizontalAlignment="Left" Height="29" Margin="282,131,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.5,0.5">
                    <Separator.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90.578"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Separator.RenderTransform>
                </Separator>
                <Separator HorizontalAlignment="Left" Height="48" Margin="340,124,0,0" VerticalAlignment="Top" Width="36"/>
                <Separator HorizontalAlignment="Left" Height="29" Margin="156,72,0,0" VerticalAlignment="Top" Width="27" RenderTransformOrigin="0.5,0.5">
                    <Separator.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90.578"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Separator.RenderTransform>
                </Separator>
                <Separator HorizontalAlignment="Left" Height="29" Margin="155,190,0,0" VerticalAlignment="Top" Width="29" RenderTransformOrigin="0.5,0.5">
                    <Separator.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90.578"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Separator.RenderTransform>
                </Separator>
                <Separator HorizontalAlignment="Left" Height="48" Margin="170,65,0,0" VerticalAlignment="Top" Width="36"/>
