                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>


                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Row="1"  Grid.Column="0" HorizontalAlignment="Center" Height="23"  TextWrapping="Wrap" Text="Équipe 1" VerticalAlignment="Top" Width="120" BorderBrush="#FFFF8000"/>
                    <TextBox Grid.Row="1"  Grid.Column="0" HorizontalAlignment="Center" Height="23"  TextWrapping="Wrap" Text="Équipe 2" VerticalAlignment="Bottom" Width="120" BorderBrush="#FFFF8000"/>
                    <TextBox Grid.Row="3"  Grid.Column="0" HorizontalAlignment="Center" Height="23" TextWrapping="Wrap" Text="Équipe 3" VerticalAlignment="Top" Width="120" BorderBrush="#FFFF8000" />
                    <TextBox Grid.Row="3"  Grid.Column="0" HorizontalAlignment="Center" Height="23"  TextWrapping="Wrap" Text="Équipe 4" VerticalAlignment="Bottom" Width="120" BorderBrush="#FFFF8000"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="textBlock" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Width="100" Height="23" Background="White" />
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="textBlock2" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Width="100" Height="23" Background="White" />
                    <TextBlock Grid.Row="2"  Grid.Column="2" Grid.ColumnSpan="2" x:Name="textBlock1_Copy1" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Center" Width="100" Height="23" Background="White"/>
                </Grid>
            </Grid>

        </Grid>

    </Grid>
</Page>
