        </Grid>
        <Button x:Name="button" Content="+" Margin="0,254,169,0" VerticalAlignment="Top" Height="36" Foreground="#FFFFAA00" Background="#FF00142C" BorderBrush="#FFFFAA00" FontFamily="ROG Fonts v1.6" FontSize="29.333" Click="button_Click"/>

    </Grid>
</Page>
